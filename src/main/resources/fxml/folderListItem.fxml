<?xml version="1.0" encoding="UTF-8"?>

<?import java.net.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>
<?import javafx.scene.image.ImageView?>

<GridPane fx:controller="com.gearreald.tullfileclient.controllers.FolderViewController"
    xmlns:fx="http://javafx.com/fxml" alignment="center" hgap="10" vgap="10">
	<padding><Insets top="5" right="25" bottom="5" left="25"/></padding>
    
    <Text fx:id="titleText"
    	text="Loading..."
        GridPane.columnIndex="0" GridPane.rowIndex="0"
        GridPane.columnSpan="2" />
    <ImageView fx:id="iconImage"
    	fitHeight="25.0" fitWidth="25.0"
    	GridPane.columnIndex="0" GridPane.rowIndex="1"/>
    <Button fx:id="openButton"
    	text="Open"
    	GridPane.columnIndex="1" GridPane.rowIndex="1"/>
</GridPane>