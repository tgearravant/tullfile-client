<?xml version="1.0" encoding="UTF-8"?>

<?import java.net.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<GridPane fx:controller="com.gearreald.tullfileclient.controllers.Controller" 
    xmlns:fx="http://javafx.com/fxml" alignment="center" hgap="10" vgap="10">
	<padding><Insets top="25" right="25" bottom="10" left="25"/></padding>
    <Text fx:id="headerText"
    	text="TullFile Client"
        GridPane.columnIndex="0" GridPane.rowIndex="0"
        GridPane.columnSpan="2"/>
 
    <Label
    	text="Server Location:"
        GridPane.columnIndex="0" GridPane.rowIndex="1"/>
 
    <TextField fx:id="serverAddressField"
        GridPane.columnIndex="1" GridPane.rowIndex="1"/>
 
 	<Label
 		text="Port:"
 		GridPane.columnIndex="0" GridPane.rowIndex="2"/>
 	<TextField fx:id="portField"
 		text="12345"
 		GridPane.columnIndex="1" GridPane.rowIndex="2"/>
 
    <Label
		text="API Key:"
        GridPane.columnIndex="0" GridPane.rowIndex="3"/>
 
    <PasswordField fx:id="keyField" 
        GridPane.columnIndex="1" GridPane.rowIndex="3"/>
	<HBox spacing="10" alignment="bottom_right" 
        GridPane.columnIndex="1" GridPane.rowIndex="5">
        <Button text="Sign In"     
        onAction="#handleSubmitButtonAction"/>
	</HBox>

	<Text fx:id="actionTarget"
       GridPane.columnIndex="1" GridPane.rowIndex="7"/>
</GridPane>